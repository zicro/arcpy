#buffer the roads feature class for each distance in the distance list

import arcpy
arcpy.env.workspace = r"C:\data\cities.gdb"
fc = "Roads"
distanceList = ["100 meters","200 meters","400 meters"]

#loop through each distance in the distanceList

for dist in distanceList:
    outName = fc+"_"+dist
    arcpy.Buffer_analysis(fc, outName, dist)

print "Finished Buffering"
